{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "lib": [
      "esnext"
    ],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "rootDir": ".",
    "baseUrl": ".",
    "jsx": "preserve",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "paths": {
      "@use-tauri/core": [
        "./packages/core/index.ts"
      ],
      "@use-tauri/core/*": [
        "./packages/core/*"
      ],
      "@use-tauri/shared": [
        "./packages/shared/index.ts"
      ],
      "@use-tauri/shared/*": [
        "./packages/shared/*"
      ],
      "@use-tauri/vue": [
        "./packages/vue/index.ts"
      ],
      "@use-tauri/vue/*": [
        "./packages/vue/*"
      ],
      "@use-tauri/react": [
        "./packages/react/index.ts"
      ],
      "@use-tauri/react/*": [
        "./packages/react/*"
      ]
    }
  },
  "include": [
    "packages"
  ],
  "exclude": [
    "node_modules",
    "**/*.md",
    "**/dist"
  ]
}
